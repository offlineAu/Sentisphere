# =============================================================================
# Sentisphere Backend - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values

# App
ENV=production
APP_NAME=Sentisphere Backend

# =============================================================================
# DATABASE (MySQL)
# =============================================================================
DB_USER=your_db_user
DB_PASS=your_db_password
DB_HOST=your-mysql-host.com
DB_PORT=3306
DB_NAME=sentisphere_app
DB_DRIVER=mysql+mysqlconnector

# Mobile DB (optional, falls back to main DB if not set)
MOBILE_DB_USER=
MOBILE_DB_PASS=
MOBILE_DB_HOST=
MOBILE_DB_PORT=3306
MOBILE_DB_NAME=sentisphere_app
MOBILE_DB_DRIVER=mysql+mysqlconnector

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# IMPORTANT: Generate a strong secret for production!
# Example: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# =============================================================================
# CORS (Frontend Origins)
# =============================================================================
# Comma-separated list of allowed frontend URLs
FRONTEND_ORIGINS=https://your-frontend.com,https://app.sentisphere.com

# =============================================================================
# MICROSOFT OAUTH (Optional)
# =============================================================================
MS_TENANT_ID=
MS_CLIENT_ID=
MS_CLIENT_SECRET=
MS_VERIFY_STRICT=0

# =============================================================================
# FEATURES & SECURITY
# =============================================================================
ALLOWED_EMAIL_DOMAINS=ustp.edu.ph
ALLOW_PASSWORDLESS_STUDENT_LOGIN=1
INSIGHTS_FEATURE_ENABLED=1
INTERNAL_API_TOKEN=
